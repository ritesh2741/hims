<%= form_for @doctor, :html => { :class => "form-horizontal doctor" } do |f| %>

    <% if @doctor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @doctor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', :style => 'width: 20%' %>
    </div>
    <%= error_span(@doctor[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control', :style => 'width: 20%' %>
    </div>
    <%= error_span(@doctor[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :dob, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dob, :class => 'form-control', :style => 'width: 20%' %>
    </div>
    <%= error_span(@doctor[:dob]) %>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gender, :class => 'form-control', :style => 'width: 20%' %>
    </div>
    <%= error_span(@doctor[:gender]) %>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'form-control', :style => 'width: 20%' %>
    </div>
