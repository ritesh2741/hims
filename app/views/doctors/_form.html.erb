      <%= f.text_field :department_id, :class => 'form-control', :style => 'width: 20%' %>
    </div>
    <%= error_span(@doctor[:department_id]) %>
  </div>

<br>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            doctors_path, :class => 'btn btn-default' %>

<% end %>
