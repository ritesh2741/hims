<table class='table table-bordered'>
	<tr>
		<td><b>Doctor Name</td>
		<td><b>Scheduled Date</td>
		<td><b>Room No</td>
	</tr>

	<% @appointments.each do |appointment| %>
		<tr>
			<td><%= appointment.doctor.name%></td>
			<td><%= appointment.schedule%></td>
			<td><%= appointment.room%></td>
		</tr>
	<% end %>
</table>
