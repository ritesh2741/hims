= form_for @patient, :html => { :class => "form-horizontal patient" } do |f|
  - if @patient.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        h3.panel-title
          = pluralize(@patient.errors.count, "error")
          | prohibited this patient from being saved:
      .panel-body
        ul
          - @patient.errors.full_messages.each do |msg|
            li= msg
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:name])
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:description])
  .control-group
    = f.label :dob, :class => 'control-label'
    .controls
      = f.text_field :dob, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:dob])
  .control-group
    = f.label :gender, :class => 'control-label'
    .controls
      = f.text_field :gender, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:gender])
  .control-group
    = f.label :phone, :class => 'control-label'
    .controls
      = f.text_field :phone, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:phone])
  .control-group
    = f.label :address, :class => 'control-label'
    .controls
      = f.text_field :address, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:address])
    .control-group
    = f.label :email_id, :class => 'control-label'
    .controls
      = f.text_field :email_id, :class => 'form-control',:style => 'width:20%'
    = error_span(@patient[:email_id])
  br/
  = f.submit nil, :class => 'btn btn-primary'
  = link_to 'Cancel', admin_index_path, :class => 'btn btn-default'

