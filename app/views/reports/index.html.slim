- model_class = Report
.page-header
  h1= t '.title', :default => 'Report for ' + @patient.name
table.table.table-striped
  thead
    tr
      th= model_class.human_attribute_name(:title)
      th= model_class.human_attribute_name(:detail)
      th= model_class.human_attribute_name(:prescription)
      th= t '.actions', :default => t("helpers.actions")
  tbody
    - @reports.each do |report|
      tr
        td= report.title
        td= report.detail
        td= report.prescription
        td= link_to 'Delete', patient_report_path(report.patient.id,report.id), :method => :delete, :class => 'btn btn-danger btn-xs', :data =>{:confirm => 'Are You Sure?'}
= link_to 'New', new_patient_report_path, :class => 'btn btn-primary'
